/* pages/DetailPage/detailPage.wxss */

.detail-page {
}

.intro-image-box {
  height: 500rpx;
  padding: 20rpx;
}

.swiper-box {
  width: 100%;
  height: 100%;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.briefInfo-box {
  position: relative;
  padding: 20rpx;
  border-top: 4rpx solid rgba(35, 143, 206, 0.733);
  border-bottom: 4rpx solid rgba(35, 143, 206, 0.733);
}

.price {
  color: orangered;
  font-size: 35rpx;
}

.briefInfo-type {
  position: absolute;
  right: 30rpx;
  top: 20%;
  font-size: 30rpx;
  color: red;
  font-weight: 500;
  outline-offset: 10rpx;
}

.briefInfo-title {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 35rpx;
  font-weight: 400;
}

.briefInfo-note {
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
}

.briefInfo-date {
  flex: 1;
  color: rgb(38, 132, 209);
  font-size: 25rpx;
}

.briefInfo-tag {
  flex: 1;
  font-size: 20rpx;
  text-align: right;
}

.briefInfoTag {
  margin-left: 10rpx;
}

.detailInfo-box {
  padding: 20rpx;
  border-bottom: 4rpx solid rgba(35, 143, 206, 0.733);
}

.detailInfo-content {
  text-indent: 2em;
  text-align: justify;
  font-size: 28rpx;
  border-radius: 10rpx;
  margin-top: 10rpx;
  padding: 10rpx;
  background-color: rgba(240, 232, 232, 0.774);
}

.detail-page-tabBar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: whitesmoke;
}
